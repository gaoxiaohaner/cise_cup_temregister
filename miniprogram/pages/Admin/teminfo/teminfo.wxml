<!--pages/index/create_enterprise.wxml-->
<view class="bigbox">
    <form bindsubmit="submit_data">
        <view class="inp_list">
            <view class="inp_li">
                <view class="li_left b li_before">学号</view>
                <view class="li_right">
                    <input disabled="true" class="input" name="stuID" type="number" value="{{ stuID }}" placeholder="请填写学号" placeholder-class="place_txt"></input>
                </view>
            </view>

            
            <view class="inp_li">
                <view class="li_left b li_before">姓名</view>
                <view class="li_right">
                    <input disabled="true" class="input" name="student_name" value="{{ student_name }}" maxlength="15" placeholder="请填写姓名" placeholder-class="place_txt"></input>
                </view>
            </view>

           <view class="inp_li">
                <view class="li_left b li_before">班级</view>
                <view class="li_right">
                    <input  disabled="true" class="input" name="class_name" value="{{ class_name }}" placeholder="请填写您所在的班级" placeholder-class="place_txt"></input>
                </view>
            </view>
<!--
            <view class="inp_li">
                <view class="li_left b li_before">班级</view>
                <picker  bindchange="set_class_name" name="class_name"  range="{{class}}" value="{{ class_name }}">
                    <view class="li_right">
                        <view class="right_icon">
                             <image src="/img/right.png"></image>
                        </view>
                        <view class="place_txt {{ (class_name.length ==0)?'':'active_txt' }}">{{ class_name.length ==0?'请选择您所在的班级': class_name}}</view>
                    </view>
                </picker>
            </view>
 -->
            <view class="inp_li">
                <view class="li_left b li_before">宿舍号</view>
                <view class="li_right">
                    <input disabled="true" class="input" name="dormitory_number" value="{{ dormitory_number }}" placeholder="例如：润杰公寓1665" placeholder-class="place_txt"></input>
                </view>
            </view>

            <view class="inp_li">
                <view class="li_left b li_before">负责人</view>
                <view class="li_right">
                    <input disabled="true" class="input" name="fuzeren" value="{{ fuzeren_name }}" placeholder="请选择负责人姓名" placeholder-class="place_txt"></input>
                </view>
            </view>
<!-- 
              <view class="inp_li">
                <view class="li_left b li_before">负责人：</view>
                <picker  bindchange="set_fuzeren_name" name="fuzeren"  range="{{fuzeren}}" value="{{ fuzeren_name }}">
                    <view class="li_right">
                        <view class="right_icon">
                             <image src="/img/right.png"></image>
                        </view>
                        <view class="place_txt {{ (fuzeren_name.length ==0)?'':'active_txt' }}">{{ fuzeren_name.length ==0?'请选择负责人姓名': fuzeren_name}}</view>
                    </view>
                </picker>
            </view>
-->
            <view class="inp_li">
                <view class="li_left b li_before">手机号码</view>
                <view class="li_right">
                    <button wx:if="{{ mobile=='' }}"  class="send_code" loading="{{ loading }}" open-type="getPhoneNumber" bindgetphonenumber="get_mobile">获取手机号码</button>
                    <input disabled="true" wx:if="{{ mobile }}" name="mobile" class="input" value="{{ mobile }}" type="number" placeholder="请填写手机号码" placeholder-class="place_txt"></input>
                </view>
            </view>

        
            
            <view class="inp_li">
                <view class="li_left b li_before">早晨体温填写</view>
                <view class="li_right">
                    <input class="input" name="morning_temp" type="digit" value="{{ morning_temp }}" placeholder="请填写早晨体温" placeholder-class="place_txt"></input>
                </view>
            </view>
            
            <view class="inp_li">
                <view class="li_left b li_before">中午体温填写</view>
                <view class="li_right">
                    <input class="input"  name="noon_temp" type="digit" value="{{ noon_temp }}" placeholder="请填写中午体温" placeholder-class="place_txt"></input>
                </view>
            </view>

            <view class="inp_li">
                <view class="li_left b li_before">晚间体温填写</view>
                <view class="li_right">
                    <input class="input"  name="night_temp" type="digit" value="{{ night_temp }}" placeholder="请填写晚间体温" placeholder-class="place_txt"></input>
                </view>
            </view>



        </view>

        <view class="select_box">
            <view class="select_img">
                <image src="/img/is_select.png"></image>
            </view>
            <view class="select_txt1">体温登记说明</view>
            <view class="select_txt2" bindtap="go_shuoming">《登记说明》</view>
        </view>

        <button hover-class="btn-class" wx:if="{{!disabled}}"  open-type="getUserInfo" form-type="submit" class="opening">{{ time_name?time_name:'' }}体温修改</button>
        <button hover-class="btn-class" wx:else disabled="true" class="opening">{{timeday}}您已成功登记</button>
    </form>
</view>


