/* pages/index/create_enterprise.wxss */
/* pages/index/physical_store.wxss */
@import "../../../style/colorui/main.wxss";
@import "../../../style/colorui/icon.wxss";
page {
  background: #f9f9f9;
}
.people_li {
  display: flex;
  align-items: center;
  margin: 30rpx 0 0 40rpx;
}

.people_li+.people_li {
  padding-top: 30rpx;
}

.people_li .li_icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.people_li .li_txt {
  font-size: 26rpx;
  color: #606266;
}
.people_li .li_txt1 {
  font-size: 26rpx;
  color: #303133;
}
.people_li .li_txt text {
  color: #e6a23c;
}
.people_li .li_txt1 text {
  color: #f51710;
}
.store_top {
  background: #fff;
}

.page_tit {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  color: #2b5997;
  text-align: center;
  background: #e5f0fe;
}

.page_tit text {
  color: #e6a23c;
}
.inp_list {
  padding: 0 40rpx;
  background: #fff;
}

.inp_list .inp_li {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 38rpx 0;
}

.inp_list .inp_li .li_left {
  font-size: 30rpx;
  color: #141414;
}

.inp_list .inp_li .li_before::before {
  content: "*";
  font-size: 30rpx;
  color: #fc5244;
}

.place_txt {
  font-size: 30rpx;
  color: #c0c4cc;
}

.active_txt {
  font-size: 30rpx;
  color: #333;
}

.inp_list .inp_li .li_right {
  text-align: right;
  /* width: 70%; */
  /* width: 500rpx;*/
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}

.inp_list .inp_li .li_right1 {
  text-align: right;
  /* width: 70%; */
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}

.inp_list .inp_li .li_right .input {
  font-size: 30rpx;
  width: 100%;
}
.inp_list .inp_li .li_right .input1 {
  width: 100%;
}
.inp_list .inp_li .li_right .input_limit {
  width: 200rpx;
}

.inp_list .inp_li .li_right .right_icon {
  width: 14rpx;
  height: 21rpx;
  margin-left: 25rpx;
}

.inp_list .inp_li .li_right .send_code {
  border: 1rpx solid #046dfe;
  border-radius: 7rpx;
  width: 190rpx !important;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  font-size: 26rpx;
  color: #046dfe;
  margin: 0;
  margin-left: 40rpx;
  padding: 0;
  background: none;
  font-weight: 400;
}

.inp_list .inp_li .li_right .send_codes {
  border: 1rpx solid #c0c4cc;
  color: #c0c4cc;
  border-radius: 7rpx;
  width: 170rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  font-size: 26rpx;
  margin-left: 40rpx;
}

.select_box {
  margin: 63rpx 0 0 40rpx;
  display: flex;
  align-items: center;
}

.select_box .select_img {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.select_box .select_txt1 {
  font-size: 26rpx;
  color: #606266;
}

.select_box .select_txt2 {
  font-size: 26rpx;
  color: #046dfe;
  text-decoration: underline;
}

.opening {
  width: 670rpx !important;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  margin: 0 auto;
  font-size: 30rpx;
  color: #fff;
  background: #046dfe;
  border-radius: 45rpx;
  margin-top: 70rpx;
  padding: 0;
}
